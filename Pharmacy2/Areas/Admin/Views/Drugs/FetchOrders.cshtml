@model IEnumerable<Pharmacy2.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>ORDER</th>
            <th>PRICE</th
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.drugNames
            </td>
            <td>
                @item.total
            </td>
        </tr>
}
    </tbody>
</table>

<div class="d-flex w-100 justify-content-center">
    <pagination page-count="@ViewBag.TotalPages"
        page-target="/admin/drugs/fetchorders/@ViewBag.CategorySlug"
        page-number="@ViewBag.PageNumber"
        page-range="@ViewBag.PageRange">
    </pagination>
</div>